#!/usr/bin/make -f
# Copyright 2013 hello-debhelper project (used according to license) with modifications by RethinkDB

package?=$(shell cat debian/control | grep '^Source:' | awk '{ printf "%s" , $$2 }')
DEBUG?=0
AUTOCHAIN?=1
PVERSION?=$(shell cat debian/control | grep '^Version: ' | head -n 1 | awk '{ printf "%s" , $$2 }')

ifneq ($(shell echo "$(package)" | grep '[A-Za-z0-9]-portable'),)
BUILD_PORTABLE?=1
FORCE_INTERNAL_TOOLS?=1
else
BUILD_PORTABLE?=0
endif

clean:
	dh_clean
	if [ -e build ] ; then rm -rf build ; fi ;
	[ ! -f Makefile ] || $(MAKE) distclean

install: build
	dh_clean
	dh_installdirs
	$(MAKE) DEBUG=$(DEBUG) AUTOCHAIN=$(AUTOCHAIN) prefix=/usr DESTDIR=$(CURDIR)/debian/$(package) FORCEVERSION=1 PVERSION=$(PVERSION) BUILD_DRIVERS=0 BUILD_PORTABLE=$(BUILD_PORTABLE) FORCE_INTERNAL_TOOLS=$(FORCE_INTERNAL_TOOLS) install

build:
	$(MAKE) DEBUG=$(DEBUG) AUTOCHAIN=$(AUTOCHAIN) prefix=/usr DESTDIR=$(CURDIR)/debian/$(package) FORCEVERSION=1 PVERSION=$(PVERSION) BUILD_PORTABLE=$(BUILD_PORTABLE) BUILD_DRIVERS=0 FORCE_INTERNAL_TOOLS=$(FORCE_INTERNAL_TOOLS)
	touch build

binary-indep: install

binary-arch: install
	dh_installdocs -a
	dh_installchangelogs -a
	dh_strip --dbg-package=$(package)-dbg
	dh_compress -a
	dh_fixperms -a
	dh_installdeb -a
	dh_shlibdeps -a
	dh_gencontrol -a
	dh_md5sums -a
	dh_builddeb -a

binary: binary-indep binary-arch

.PHONY: binary binary-arch binary-indep clean install build

